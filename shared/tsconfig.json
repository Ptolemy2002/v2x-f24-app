{
  "compilerOptions": {
    "baseUrl": "./",
    "module": "ESNext",
    "target": "ES2020",
    "declaration": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "maxNodeModuleJsDepth": 0,
    "moduleResolution": "node",
    "strictNullChecks": true,

    "paths":{
         "src/*":[
            "./src/*"
         ]
      },
      "plugins":[
         {
            "transform":"typescript-transform-paths"
         },
         {
            "transform":"typescript-transform-paths",
            "afterDeclarations": true
         }
      ]
  },
  "include": [
    "src",
    "types/**/*.d.ts"
  ]
}